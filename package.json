{
  "name": "verdaccio-pack",
  "type": "module",
  "version": "1.0.1",
  "description": "cli for compress verdaccio storage to a zip file",
  "author": "slgluo",
  "license": "ISC",
  "homepage": "https://github.com/slgluo/verdaccio-pack",
  "repository": {
    "type": "git",
    "url": "https://github.com/slgluo/verdaccio-pack.git"
  },
  "keywords": ["verdaccio"],
  "exports": "./dist/index.js",
  "bin": {
    "verdaccio-pack": "./bin/verdaccio-pack.js"
  },
  "files": [
    "bin",
    "dist"
  ],
  "engines": {
    "node": ">=14.16"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx ./src/cli.ts clear",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release": "pnpm release:version && pnpm release:publish",
    "release:publish": "pnpm publish --tag latest",
    "release:version": "bumpp package.json --commit --all --no-push"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "chalk": "^5.2.0",
    "commander": "^10.0.0",
    "execa": "^7.1.1",
    "node-fetch": "^3.3.1",
    "rimraf": "^4.4.1",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.38.4",
    "@types/archiver": "^5.3.2",
    "@types/node": "^18.15.11",
    "bumpp": "^9.1.0",
    "eslint": "^8.38.0",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^6.7.0",
    "tsx": "^3.12.6",
    "typescript": "^5.0.3"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
